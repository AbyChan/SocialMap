<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="MPShowModalLabel">Mark Post Detail</h4>
    </div>
    <div class="modal-body" id="MPShowBody">
        <div class="row">
            <div class="col-xs-6 col-md-1">
                <a href="#" class="thumbnail user" style="width:50px;height: 50px" id="<%= userInfo.user %>">
                    <img src="<%= userInfo.portrait %>" alt="cannot load portrait" class="img-circle" id="<%= userInfo.user %>">
                </a>
            </div>
            <div class="col-xs-6 col-md-1">
                <h5 class="text-primary user" id="<%= userInfo.user %>"><%= userInfo.nickName %></h5>
            </div>
            <div class="col-xs-6 col-md-1">
                <em><%= userInfo.personalDescription %></em>
            </div>
        </div>
        <h4 class="bg-info"><%= title %></h4>
        <p ><%= text %></p>
        <img src="<%= picture %>" class="img-responsive" alt="Responsive image">



    </div>
    <div class="modal-footer">
        <p class="text-right"><ins>Post at <%= postTime %></ins></p>
    </div>
</div>
