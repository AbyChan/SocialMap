<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="MPShowModalLabel" ><%= information.nickName %> Detail</h4>
    </div>
    <div class="modal-body" id="MPShowBody">
        <div class="row">
            <div class="col-xs-6 col-md-1">
                <a href="#" class="thumbnail" style="width:50px;height: 50px">
                    <img src="<%= '/media/' + information.portrait %>" alt="cannot load portrait" class="img-circle">
                </a>
            </div>
            <div class="col-xs-6 col-md-1">
                <h5 class="text-primary"><%= information.nickName %></h5>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-6 col-md-1">
                <em><%= information.personalDescription %></em>
            </div>
        </div>
        <table class="table table-striped">
            <tr>
                <td>country: </td>
                <td><%= information.country %></td>
            </tr>
            <tr>
                <td>city: </td>
                <td><%= information.city %></td>
            </tr>
            <tr>
                <td>birthday: </td>
                <td><%= information.birthday %></td>
            </tr>
            <tr>
                <td>school: </td>
                <td><%= information.school %></td>
            </tr>
            <tr>
                <td>nowCity: </td>
                <td><%= information.nowCity %></td>
            </tr>
            <tr>
                <td>publicMail: </td>
                <td><%= information.publicMail %></td>
            </tr>
            <tr>
                <td>publicPhoneNumber: </td>
                <td><%= information.publicPhoneNumber %></td>
            </tr>
            <tr>
                <td>QQ: </td>
                <td><%= information.QQ %></td>
            </tr>
        </table>

        <button type="button" class="btn btn-primary follow" id="<%= id %>">Follow</button>
        <button type="button" class="btn btn-danger notsee" id="<%= id %>">Not See</button>


    </div>
    <div class="modal-footer">
        <p class="text-right"><ins>----</ins></p>
    </div>
</div>
